# === General === #
alias ll='ls -lh'
alias lla='ls -lAh'
alias uuidgen_lower="uuidgen |tr '[:upper:]' '[:lower:]'"
alias ipaddr='ipconfig getifaddr en0'
alias less='vimpager'
alias vim='nvim'
alias chmox='chmod'

# === Git === #
alias gl='git pull'
alias gco='git checkout'
alias gp='git push'
alias gpN='git push --no-verify'
alias gpF='git push --force-with-lease'
alias gpFN='git push --force-with-lease --no-verify'
alias gm='git merge'
alias gmt='git mergetool --no-prompt'
alias gss='git status -s'
alias gc='git commit -v'
alias gcp='git commit -vp'
alias gcn='git commit -vn'
alias gcpn='git commit -vpn'
alias gaa='git add .'
alias gai='git add -i'
alias gaac='git add . && git commit -m'
alias gst='git stash push --include-untracked'
alias gsta='git stash apply'
alias gstm='git stash push -m'
alias gstp='git stash pop'
alias gstl='git stash list'
alias gpsup='git push --set-upstream origin "$(git rev-parse --abbrev-ref HEAD)"'
alias gaac='git add . && git commit -m'
alias gdn='git diff --name-only'
alias glg='git log --graph'
alias glgp='git log --graph -p'
alias gslg='git shortlog'
alias glgo='git log --oneline'
alias glgos='git log --oneline -5 |cat'
alias glnf='git pull --no-ff'
alias gd='git diff'
alias gdd='git diff development.."$(git rev-parse --abbrev-ref HEAD)"'
alias gdm='git diff master.."$(git rev-parse --abbrev-ref HEAD)"'
alias gfa='git fetch --all --prune'
alias gr='git reset'
alias grh='git reset HEAD'
alias grhh='git reset HEAD --hard'
alias gcb='git checkout -b'
alias gb='git branch'
alias gba='git branch -a'
alias gbd='git branch -d'
alias gbdm='git branch --merged |rg -v "(^\*|master|development)" | xargs git branch -d'
alias gbD='git branch -D'
alias grb='git rebase -i'
alias grbn='HUSKY_SKIP_HOOKS=1 git rebase -i'
alias grbc='git rebase --continue'
alias grba='git rebase --abort'
alias grlg='git reflog'
alias gbs='git bisect'
alias gbsg='git bisect good'
alias gbsb='git bisect bad'
alias gbsr='git bisect reset'

