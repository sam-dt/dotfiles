[user]
	name = Sam Dhondt
	email = sam@codifly.be
[core]
	excludesfile = /Users/sam/.gitignore_global
	ignorecase = false
	editor = nvim
  pager = less
[mergetool "nvim"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
[diff]
	tool = less
[merge]
	tool = nvim
[difftool]
	prompt = false
[mergetool]
	path = nvim
	keepBackup = false
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
